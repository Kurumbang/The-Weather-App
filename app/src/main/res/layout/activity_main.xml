<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#5A5AFF">

    <TextView
        android:id="@+id/city_name"
        android:text="Hamburg, Germany"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:text="Description"
        android:layout_below="@+id/city_name"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/temperature"
        android:text="20"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="55sp"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="310dp"
        android:id="@+id/relative"
        android:layout_below="@+id/temperature"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunrise"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/sunrise_textView"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunset"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/sunset_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sunrise_textView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/humidity_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sunset_textView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressure"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/pressure_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/humidity_textView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Temp"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/max_temp_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pressure_textView"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Temp"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:id="@+id/min_temp_textView"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/max_temp_textView"/>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="310dp"
        android:layout_below="@+id/temperature"
        android:layout_toRightOf="@+id/relative"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunrise"
            android:text="Sunrise:"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sunset"
            android:text="Sunset:"
            android:padding="5dp"
            android:textColor="#fff"
            android:layout_below="@+id/sunrise"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/humidity"
            android:text="Humidity:"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_below="@+id/sunset" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressure"
            android:text="Pressure:"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_below="@+id/humidity" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/max_temp"
            android:text="Max Temp:"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="#fff"
            android:layout_below="@+id/pressure" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_temp"
            android:text="Min Temp:"
            android:padding="5dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_below="@+id/max_temp" />







    </RelativeLayout>






</RelativeLayout>
